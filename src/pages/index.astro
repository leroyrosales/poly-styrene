---
import Portfolio from "../components/Portfolio.astro";
import Skills from '../components/Skills.astro';
import People from '../components/People.astro';
import Outro from '../components/Outro.astro';

import site from "../data/site.json";
const { author, title, description, intro } = site;

const likes = [
	"tiki drinks",
	"dogs",
	"punk",
]
const randomLike = likes[Math.floor(Math.random()*likes.length)];
const slogan = `I'm just a nerd that likes ${randomLike}.`;

---

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<title>{ title } - { description }</title>
		<style global>
			@import "../styles/global.css";
		</style>
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/devicons/devicon@v2.12.0/devicon.min.css">
	</head>

	<body>
		<div class="grid grid-cols-2 lg:grid-cols-3">
			<article class="p-4 boder border-2 border-black">
				<div class="pb-8">
					<h1 class="text-5xl font-extrabold pb-4">👨🏾‍💻 {author}</h1>
					<p class="slogan anim-typewriter">{slogan}</p>
				</div>
				<p class="text-3xl">{intro}</p>
			</article>
			<Portfolio/>
		</div>
		<Skills />
		<People />
		<Outro />
	</body>
</html>
