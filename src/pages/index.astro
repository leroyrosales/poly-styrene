---
import Portfolio from "../components/Portfolio.astro";
import Skills from '../components/Skills.astro';
import People from '../components/People.astro';
import Outro from '../components/Outro.astro';
import Footer from "../components/Footer.astro";

import site from "../data/site.json";
const { author, title, description, intro, likes } = site;

const randomLike = likes[Math.floor(Math.random()*likes.length)].toLowerCase();
const slogan = `I'm just a nerd that likes ${randomLike}.`;

---

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<title>{ title } - { description }</title>
		<style global>
			@import "../styles/global.css";
		</style>
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/devicons/devicon@v2.12.0/devicon.min.css">
	</head>

	<body>
		<div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3">
			<article class="card">
				<h1>ğŸ‘¨ğŸ¾â€ğŸ’» {author}</h1>
				<p class="slogan anim-typewriter">{slogan}</p>
				<p class="text-3xl">{intro}</p>
			</article>
			<Portfolio/>
		</div>
		<Skills />
		<section class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3">
			<People />
			<Outro />
			<Footer />
		</section>
	</body>
</html>
