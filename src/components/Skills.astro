---
import site from "../data/site.json";
import SkillItem from './SkillItem.astro';
const title = `Skills`;
const proficient = `Proficient in`;
const comfortable = `Comfortable with`;
const learning = `Learning`;
const copy = `Working and innovating 24/7.`;
const {skills, likes} = site;
---
<section>
    <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3">
        <article class="card">
            <h2>{title}</h2>
            <p class="text-2xl">{copy}</p>
        </article>
        <article class="card">
            <h3>{proficient}</h3>
            <ul>
            {skills.proficient.map((item) => (
                <SkillItem item={item} />
            ))}
            </ul>
        </article>
        <article class="card">
            <h3>{comfortable}</h3>
            <ul>
            {skills.comfortable.map((item) => (
                <SkillItem item={item} />
            ))}
            </ul>
        </article>
        <article class="card">
            <h3>{learning}</h3>
            <ul>
            {skills.learning.map((item) => (
                <SkillItem item={item} />
            ))}
            </ul>
        </article>
        <article class="card">
            <h3>Interests</h3>
            <ul>
            {likes.map((item) => (
                <li>{item}</li>
            ))}
            </ul>
        </article>
    </div>
</section>

