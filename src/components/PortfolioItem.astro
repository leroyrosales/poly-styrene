---
const { item } = Astro.props;
---
<article class="card hover:bg-green-300 hover:cursor-pointer">
    <div class="portfolio-item--text">
        <h2>{item.title}</h2>
        <figure class="pb-4">
            <picture>
                <img width="600" height="450" loading="lazy" class="w-full" src={item.jpg} alt=`Screenshot of ${item.title}` />
            </picture>
        </figure>
            {item.link &&
                <a class="text-2xl mt-4 py-2 px-4 bg-green-400 text-black font-semibold shadow-md hover:bg-green-700 hover:text-white focus:outline-none focus:ring-2 focus:ring-green-400 focus:ring-opacity-75" href={item.link} target="_blank" rel="noopener noreferrer">View Site</a>
            }
    </div>
</article>
